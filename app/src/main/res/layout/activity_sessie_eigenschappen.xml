<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.royadmiraal.planningpoker.SessieEigenschappenActivity"
    android:scrollIndicators="right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sessie pin"
        android:id="@+id/sessiePin"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/doorgaanButton"
        android:layout_alignStart="@+id/doorgaanButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PIN komt hier"
        android:id="@+id/IdPin"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/listView"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sessie starten"
        android:id="@+id/sessieStartenButton"
        android:onClick="doorgaanSpeelveld"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taak toevoegen"
        android:id="@+id/taakToevoegenButton"
        android:onClick="doorgaanSpeelveld"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ronde timer"
        android:id="@+id/rondeTimer"
        android:textSize="30dp"
        android:layout_above="@+id/sessieStartenButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="30dp"
        android:clickable="true"
        android:autoText="false"
        android:format="H:MM:SS"
        android:layout_below="@+id/listView"
        android:layout_alignLeft="@+id/taakToevoegenButton"
        android:layout_alignStart="@+id/taakToevoegenButton" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:nestedScrollingEnabled="true"
        android:layout_above="@+id/rondeTimer"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sessiePin" />

</RelativeLayout>