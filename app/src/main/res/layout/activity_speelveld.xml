</GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hier komt de taak te staan"
        android:id="@+id/taakOmschrijving"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/opleggenKaartButton"
        android:layout_alignEnd="@+id/opleggenKaartButton"
        android:layout_marginTop="56dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Kaart kiezen"
        android:id="@+id/opleggenKaartButton2"
        android:onClick="opleggen1"
        android:layout_gravity="bottom"
        android:layout_below="@+id/GridLayout1"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Standaartkaart"
        android:id="@+id/opleggenKaartButton"
