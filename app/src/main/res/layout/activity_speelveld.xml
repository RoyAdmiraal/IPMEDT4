        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/spelerNaam1"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-10dp" />


